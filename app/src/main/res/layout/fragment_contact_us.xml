<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0277BD"
    android:padding="20dp"
    tools:context=".ui.notifications.ContactUsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/gmail"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Write us on Gmail"
                android:drawableLeft="@drawable/gmail"

                />

            <Button
                android:id="@+id/twitter"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Reach us on twitter"
                android:drawableLeft="@drawable/twitter"
                android:layout_below="@id/gmail"
                />

            <Button
                android:id="@+id/github"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="view existing projects on github"
                android:layout_below="@id/twitter"
                android:drawableLeft="@drawable/github"
                />

            <Button
                android:id="@+id/whatsapp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="view existing projects on github"
                android:layout_below="@id/github"
                android:drawableLeft="@drawable/whatsapp"
                />

            <Button
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="view existing projects on github"
                android:layout_below="@id/whatsapp"
                android:drawableLeft="@drawable/phone"
                />

        </RelativeLayout>





    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>