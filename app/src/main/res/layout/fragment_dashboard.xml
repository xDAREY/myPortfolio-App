<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:padding="10dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/AboutComponent"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg"
            android:padding="7dp"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >


            <RelativeLayout
                android:id="@+id/Bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile calculator"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mobile_calculator"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>



        </RelativeLayout>

        <View
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="1dp"
           app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/AboutComponent" />

        <RelativeLayout
            android:id="@+id/skillBox"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/liner"
            app:layout_constraintVertical_bias="0.231">


            <RelativeLayout
                android:id="@+id/contentsComponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Quiz App"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/quizmage"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/liner2"
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="1dp"
            android:layout_marginTop="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/skillBox"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/qualBox"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/liner2"
            app:layout_constraintVertical_bias="0.231">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Stopwatch"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/timermage"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/liner3"
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="1dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/qualBox"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/xpBox"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/liner3"
            app:layout_constraintVertical_bias="0.231">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Authentication App"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/authmage"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/liner4"
            android:layout_width="match_parent"
            android:background="@color/purple_500"
            android:layout_height="1dp"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/xpBox"
            app:layout_constraintEnd_toEndOf="parent"/>

        <RelativeLayout
            android:id="@+id/xpBox2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/liner4"
            app:layout_constraintVertical_bias="0.231">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type IT App"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/taketest"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>